.box {
  display: flex;
  flex-direction: column;
}

.box swiper {
  width: 100%;
  height: 800rpx;
  bottom: 20rpx;
}

.box swiper image {
  width: 100%;
  height: 100%;
}

.box .content {
  padding: 20rpx;
}

.box .content .title {
  font-size: 40rpx;
  line-height: 50rpx;
  color: #000;
  padding: 10rpx 0;
}

.box .content .fen {
  font-size: 30rpx;
  color: #F00;
}

.box .content .pic {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.box .content .pic .pic1 {
  font-size: 46rpx;
  color: #f00;
}

.box .content .pic .pic2 {
  font-size: 36rpx;
  color: #8f8f8f;
}

.box .content .pic .pic3 {
  font-size: 30rpx;
  color: #ccc;
}

.box .content .pic .icon {
  font-size: 80rpx;
}

.box .content .pic .icon .van-icon {
  margin-left: 20rpx;
}

.box .content .but {
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 10rpx 0;
}

.box .jie {
  margin-bottom: 120rpx;
}

.box .jie .txt {
  padding: 30rpx;
  font-size: 40rpx;
}

.box .jie image {
  width: 100%;
  vertical-align: top;
}

.box .goods {
  width: 100%;
}

.box .goods .van-button {
  width: 25%;
}

.box .goods .van-goods-action-button .van-button {
  width: 100%;
}

.prpup {
  position: relative;
  box-sizing: border-box;
  padding-top: 50rpx;
  padding-bottom: 100rpx;
}

.prpup .stepper {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 10rpx;
  margin-top: 30rpx;
}

.prpup .van-button {
  width: 100%;
  position: absolute;
  bottom: 0;
}

.van-popup .prop > view {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #8f8f8f;
}

.van-popup .prop > view > view > text {
  font-size: 40rpx;
}

.van-popup .prop > view .fen {
  display: flex;
  flex-wrap: wrap;
}

.van-popup .prop > view .fen > view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 40rpx;
  border: 1rpx solid #8f8f8f;
  color: #000;
  font-size: 26rpx;
  border-radius: 10rpx;
  margin: 0 10rpx;
  padding: 10rpx;
}

.van-popup .prop > view .fen .disable {
  border: 1rpx solid #ddd;
  color: #ddd;
}

.van-popup .prop > view .fen .active {
  border: 1rpx solid #f00;
  color: #f00;
}
