/* compontants/side/side.wxss */
.side {
    width: 160rpx;
    display: flex;
    flex-direction: column;
    
}

.side>view {
    width: 100%;
    height: 120rpx;
    font-size: 28rpx;
    background-color: #f7f8fa;
    display: flex;
    justify-content: center;
    align-items: center;
}

.side .active {
    border-left: 6rpx solid #ee0a24;
    background-color: #fff;
}

.box {
    display: flex;
}

.rig {
    width: 580rpx;
}

.right>view {
    display: flex;
    box-sizing: border-box;
    padding: 10rpx 20rpx;
}

.right>view image {
    width: 200rpx;
    height: 200rpx;
}

.right>view text {
    font-size: 30rpx;
}

.right>view .pic {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.bot {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 20rpx;
}

.title {
    width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.price {
    color: #F00;
}

.box>view {
    height: 90vh;
    overflow: auto;
}

.prpup {
    position: relative;
    box-sizing: border-box;
    padding-top: 50rpx;
    padding-bottom: 100rpx;
}

.prpup .stepper {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 10rpx;
    margin-top: 30rpx;
}

.prpup van-button {
    width: 100%;
    position: absolute;
    bottom: 0;
}

van-popup .prop>view {
    width: 100%;
    box-sizing: border-box;
    padding: 10rpx 20rpx;
    border-bottom: 1px solid #8f8f8f;
}

van-popup .prop>view>view>text {
    font-size: 40rpx;
}

van-popup .prop>view .fen {
    display: flex;
    flex-wrap: wrap;
}

van-popup .prop>view .fen>view {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80rpx;
    height: 40rpx;
    border: 1rpx solid #8f8f8f;
    color: #000;
    font-size: 26rpx;
    border-radius: 10rpx;
    margin: 0 10rpx;
    padding: 10rpx;
}

van-popup .prop>view .fen .disable {
    border: 1rpx solid #ddd;
    color: #ddd;
}

van-popup .prop>view .fen .active {
    border: 1rpx solid #f00;
    color: #f00;
}