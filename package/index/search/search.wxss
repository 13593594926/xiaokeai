.seachBox {
  background-color: #fafafa;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.pos {
  position: fixed;
  z-index: 999;
  width: 100%;
  background-color: #fff;
}

.sea {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.sea .sea_sea {
  width: 80%;
}

.sea .sea_sea .van-search {
  width: 100%;
}

.sea .sea_icon {
  margin-right: 30rpx;
  text-align: center;
  display: flex;
  align-items: center;
}

.miaosha {
  padding: 15rpx;
  display: flex;
  height: 180rpx;
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.miaosha .img1 {
  width: 40%;
  height: 100%;
}

.miaosha .img1 image {
  width: 100%;
  height: 100%;
}

.ms_right {
  padding: 5rpx 20rpx;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.ms_right .zi {
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ms_right .van-icon {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
}

.xian {
  color: red;
  font-weight: bold;
  font-size: 32rpx;
}

.shouchu {
  font-size: 30rpx;
  color: pink;
}

.hezi {
  padding: 210rpx 20rpx 0 20rpx;
  flex: 1;
}

.nav {
  display: flex;
  justify-content: space-around;
  height: 80rpx;
}

.listBox {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 210rpx 20rpx 0 20rpx;
}

.listBox .lr {
  width: 47%;
  margin: 10rpx;
  font-size: 24rpx;
  background-color: #fff;
  border-radius: 15rpx;
  position: relative;
}

.listBox .lr .van-icon {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
}

.listBox .lr > image {
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx 15rpx 0 0;
}

.listBox .lr .lr_te {
  font-size: 26rpx;
  margin: 5rpx 0;
  padding: 0 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.listBox .lr .lr_te1 {
  padding: 0 30rpx;
  margin: 10rpx 0;
  color: red;
  font-size: 24rpx;
}

.listBox .lr .lr_te2 {
  font-size: 20rpx;
  color: pink;
}
