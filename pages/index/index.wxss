.box {
  position: relative;
  background-color: #e7e7e7;
}

.box swiper {
  width: 100%;
  height: 420rpx;
}

.box swiper image {
  width: 100%;
  height: 100%;
}

.box .swiper_a {
  background-color: #000;
  color: #fff;
  opacity: .6;
  width: 85%;
  position: absolute;
  left: 8%;
  top: 110rpx;
  height: 50rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
}

.box .swiper_a swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.box .swiper_a swiper-item view {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.box .van-search {
  position: absolute;
  width: 90%;
  opacity: .8;
  left: 5%;
  top: 10rpx;
}

.box .van-search .van-search__content {
  border-radius: 30rpx;
}

.box .van-notice-bar .right {
  color: #000;
}

.box .grid .grid_item {
  width: 20%;
  height: 100%;
}

.box .miao {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
  align-items: center;
}

.box .miao > view {
  width: 95%;
  background-color: #e7e7e7;
  display: flex;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
}

.box .miao > view .img {
  margin-right: 20rpx;
}

.box .miao > view .img image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 20rpx;
}

.box .miao > view .title {
  font-size: 30rpx;
  color: #292929;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.box .miao > view .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.box .miao > view .content .time {
  background-color: #c22222;
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-radius: 20rpx;
  padding-left: 30rpx;
}

.box .miao > view .content .time .van-count-down {
  color: #fff;
}

.box .miao > view .content .pic {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.box .miao > view .content .pic .price {
  font-size: 32rpx;
  font-weight: 700;
  color: #f00;
}

.box .miao > view .content .pic .oldPric {
  font-size: 26rpx;
  color: #a3a3a3;
  text-decoration: line-through;
}

.box .miao > view .content .pic .van-button {
  width: 160rpx;
}

.box .zhiBo {
  width: 100%;
}

.box .zhiBo image {
  width: 100%;
  height: 400rpx;
  vertical-align: top;
}

.box .divider {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
}

.box .list {
  display: flex;
  flex-wrap: wrap;
}

.box .list > view {
  width: 46%;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 10rpx 2%;
}

.box .list > view image {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  vertical-align: top;
}

.box .list > view .title {
  font-size: 30rpx;
  color: #000;
  padding-left: 20rpx;
  height: 70rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.box .list > view .pic {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 10rpx;
}

.box .list > view .pic .price {
  font-size: 28rpx;
  color: #f00;
}

.box .list > view .pic .oldPric {
  font-size: 26rpx;
  color: #a3a3a3;
  text-decoration: line-through;
}

.box .kan {
  background-color: #fff;
}

.box .kan .h {
  font-size: 34rpx;
  font-weight: 700;
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #afafaf;
}

.box .kan .jia {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #e7e7e7;
}

.box .kan .jia > view {
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  margin: 10rpx 0;
  width: 100%;
}

.box .kan .jia > view .van-button {
  float: right;
  width: 160rpx;
  margin-right: 20rpx;
}

.box .kan .jia > view > view {
  display: flex;
  background-color: #fff;
}

.box .kan .jia > view > view .img {
  margin-right: 20rpx;
}

.box .kan .jia > view > view .img image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 20rpx;
}

.box .kan .jia > view > view .title {
  width: 100%;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #292929;
}

.box .kan .jia > view > view .content {
  width: 480rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.box .kan .jia > view > view .content .time {
  background-color: #fafafa;
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-radius: 20rpx;
  padding-left: 30rpx;
}

.box .kan .jia > view > view .content .time .van-count-down {
  color: #fff;
}

.box .kan .jia > view > view .content .pic {
  display: flex;
  align-items: center;
  justify-content: start;
}

.box .kan .jia > view > view .content .pic .price {
  font-size: 32rpx;
  font-weight: 700;
  color: #f00;
}

.box .kan .jia > view > view .content .pic .oldPric {
  font-size: 26rpx;
  color: #a3a3a3;
  text-decoration: line-through;
}

.box .pin .tuan {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box .pin .tuan > view {
  width: 95%;
  background-color: #fff;
  margin: 20rpx 0;
  padding: 0 0 10rpx 0;
}

.box .pin .tuan > view image {
  width: 100%;
  vertical-align: top;
}

.box .pin .tuan > view .text {
  padding-left: 30rpx;
  font-size: 36rpx;
  color: #000;
}

.box .pin .tuan > view .pic {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.box .pin .tuan > view .pic .price {
  font-size: 32rpx;
  font-weight: 700;
  color: #f00;
}

.box .pin .tuan > view .pic .oldPric {
  font-size: 26rpx;
  color: #a3a3a3;
  text-decoration: line-through;
}

.box .pin .tuan > view .pic .van-button {
  width: 160rpx;
}
