/* pages/orderList/orderList.wxss */
#orderList{
  width: 100%;
  height: 100vh;
  background: #F2F2F2;
  display: flex;
  flex-direction:column ;
 }

.tab{
 width: 100%;
 height: 100rpx;
 background: white;
 display: flex;
}
.li{
 width: 20%;
 height: 100%;
 display: flex;
 justify-content: center;
 align-items: center;
 font-size: 30rpx;
 box-sizing: border-box;
 border-bottom: 6rpx solid white;

}
.red{
 border-bottom: 6rpx solid red;
 color: red;
}

.content{
margin-top: 30rpx;
flex: 1;
overflow: auto;

box-sizing: border-box;
}

.box{
 width: 100%;
 height: 100%;
 display: flex;
 flex-direction: column;
}
.item{
 width: 100%;
 display: flex;
 flex-direction: column;
 background: white;
 height: 600rpx;
 padding-left: 20rpx;
 padding-right: 20rpx;
 margin-bottom: 30rpx;
box-sizing: border-box;
}

.title{
 width: 100%;
 height: 100rpx;
 display: flex;
 align-items: center;
 justify-content: space-between;
 border-bottom: 2rpx solid #F2F2F2;
}
.orderNumber{
 font-size: 30rpx;
color: black;
}
.status{
 font-size: 30rpx;
 color: #808080;

}

.image{
 width: 100%;
 height: 200rpx;
 display: flex;
 flex-direction: column;
 justify-content: space-around;
 border-bottom: 2rpx solid #F2F2F2;
 box-sizing: border-box;
}
image{
 width: 100rpx;
 height: 100rpx;
}
.price{
 font-size: 30rpx;
 width: 100%;
 display: flex;
 justify-content: flex-end;
 box-sizing: border-box;

}
.btn{
 width: 100%;
 height: 100rpx;
 display: flex;
 justify-content: flex-end;
 margin-top: 30rpx;
 box-sizing: border-box;
}

.btn button{
 width: 200rpx;
 height: 60rpx;
 background: white;
 display: flex;
 justify-content: center;
 align-items: center;
 font-size: 26rpx;
 margin: 0;
 padding: 0;
 margin-right: 30rpx;
}
.btn>.fukuan{
 border:solid 2rpx red ;
 color: red;
}
.btn>.cancel{
 border: solid 2rpx slategray;
}

.time{
 width: 100%;
 height: 80rpx;
 display: flex;
 align-items: center;
 border-bottom: 2rpx solid #F2F2F2;
 margin-bottom: 30rpx;
}
.item>text{
 height: 30rpx;
}