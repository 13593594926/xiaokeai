.box {
  background-color: #fafafa;
  padding-bottom: 120rpx;
}

.box > view {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.box > view .item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx;
}

.box > view .item .img {
  width: 200rpx;
  height: 200rpx;
}

.box > view .item .img image {
  width: 100%;
  height: 100%;
}

.box > view .item .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 0;
}

.box > view .item .content .title {
  display: flex;
  justify-content: space-between;
}

.box > view .item .content .title .txt {
  width: 460rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.box > view .item .content .title .icon {
  font-size: 34rpx;
}

.box > view .item .content .color {
  font-size: 26rpx;
  color: #ccc;
}

.box > view .item .content .pri {
  display: flex;
  justify-content: space-between;
}

.box > view .item .content .pri .price {
  color: #f00;
}

.box > view .submit {
  font-size: 30rpx;
  color: #F00;
  float: left;
}
